@model IEnumerable<SOLIDapp.Models.IngredientViewModel>

<h2>Ingredients</h2>

<p>
    @Html.ActionLink("Create New", "IngredientCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "IngredientEdit", new { id=item.ID }) |
            @Html.ActionLink("Delete", "IngredientDelete", new { id=item.ID })
        </td>
    </tr>
}

</table>
