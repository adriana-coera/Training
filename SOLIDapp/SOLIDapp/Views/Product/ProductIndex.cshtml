@model IEnumerable<SOLIDapp.Models.ProductViewModel>

@{
    ViewBag.Title = "ProductIndex";
}

<h2>Products</h2>

<p>
    @Html.ActionLink("Create New", "ProductCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Edit", "ProductEdit", new {id = item.ID}) |
            @Html.ActionLink("Details", "ProductDetails", new {id = item.ID}) |
            @Html.ActionLink("Delete", "ProductDelete", new {id = item.ID})  |
            @Html.ActionLink("Order", "ProductOrder", new {id= item.ID})
        </td>
    </tr>
}

</table>
